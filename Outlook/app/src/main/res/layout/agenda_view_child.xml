<?xml version="1.0" encoding="utf-8"?>
<bakha.ms.outlook.ui.view.AgendaViewChild xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">
    <TextView
        android:id="@+id/agenda_view_child_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/agenda_view_no_event_height"
        android:paddingLeft="14dp"
        android:textSize="12dp"
        android:gravity="center|left"
        android:text="@string/no_event"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/event_view_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_column_height">
        <LinearLayout
            android:id="@+id/time_layout"
            android:orientation="vertical"
            android:layout_width="@dimen/event_time_width"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/start_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/duration_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/event_detail_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="@dimen/event_column_height"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/small_circle"
                />

            <LinearLayout
                android:id="@+id/event_name_location_layout"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/event_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:text="@string/no_event"/>
                <LinearLayout
                    android:id="@+id/location_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_place_black_24dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/event_location_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/event_id_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</bakha.ms.outlook.ui.view.AgendaViewChild>